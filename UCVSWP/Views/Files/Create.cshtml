@model UCVSWP.Models.File
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-image: url('/images/files.jpg');background-size:cover;">
	<h1>Create</h1>

	<h4>File</h4>
	<hr />
	<div class="col-md-4">
		<form asp-action="Create" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="AssignmentID" class="control-label"></label>
				<select asp-for="AssignmentID" class="form-control" asp-items="ViewBag.Assignments">
					<option value="">-- Select Assignment --</option>
				</select>
			</div>

			<div class="form-group">
				<label for="uploadedFile" class="control-label">File:</label>
				<input type="file" id="uploadedFile" name="uploadedFile" class="form-control" />
				<span asp-validation-for="Attachment" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>

	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</body>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
