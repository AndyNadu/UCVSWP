@model IEnumerable<UCVSWP.Models.GradeAssignment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.GradeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assignment.AssignmentID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GradeAssignmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GradeAssignmentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GradeAssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
